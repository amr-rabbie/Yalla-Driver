<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_invites"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite"
    tools:context="com.asi.yalla_egy.Invites">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:weightSum="2"
            android:paddingTop="40dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Yorcodeis"
                android:textColor="@color/Wheat"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/tvRecCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12XMEYUHS"
                android:textColor="@color/Wheat"
                android:textAlignment="center"
                android:textSize="25sp"
                />
            <mehdi.sakout.fancybuttons.FancyButton

                android:id="@+id/btn_copycode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_textFont="@string/fontstring"
                android:layout_gravity="center"
                fancy:fb_defaultColor="@android:color/transparent"
                fancy:fb_focusColor="#9bd823"

                fancy:fb_fontIconResource="&#xf24d;"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="3dp"
                fancy:fb_text="@string/copycode"
                fancy:fb_textColor="#FFFFFF" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/offWhite"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eranmoremoney"
                android:textSize="18sp"
                android:textColor="@color/offWhite"

                android:layout_marginBottom="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                />


        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/helplayout"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="30dp"
                        android:src="@drawable/contacts"
                        android:tint="@color/tintblack"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="@string/invitetocontacts"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:layout_height="wrap_content"
                        android:tint="@color/gray"
                        android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/llShareRefCode"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="30dp"
                        android:tint="@color/tintblack"
                        android:src="@drawable/shareicon"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="@string/Shareonsocail"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:layout_height="wrap_content"
                        android:tint="@color/gray"
                        android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
