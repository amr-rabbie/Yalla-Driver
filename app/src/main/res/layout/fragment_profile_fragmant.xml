<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragmant.ProfileFragmant"
    android:background="@color/offWhite"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="170dp"
           android:orientation="horizontal"
           android:background="#123"
           android:weightSum="2"
           >

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical"
               android:layout_marginTop="10dp"
               >
               <de.hdodenhof.circleimageview.CircleImageView
                   xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:id="@+id/profile_image"
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:layout_gravity="center"
                   android:src="@drawable/user"
                   app:civ_border_width="2dp"
                   app:civ_border_color="#dedada"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Anwar Samir"
                   android:textAlignment="center"
                   android:layout_marginTop="10dp"
                   android:textColor="@color/Wheat"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:id="@+id/tv_name"
                   android:maxLines="1"
                   android:ellipsize="end"
                   />
               <TextView
                   android:id="@+id/tvViewProfile"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/view_profile"
                   android:textColor="@color/red"
                   android:textSize="15dp"
                   android:layout_marginTop="10dp"
                   android:textAlignment="center"
                   />
           </LinearLayout>
           <View
               android:layout_width="1dp"
               android:layout_height="wrap_content"
               android:background="@color/offWhite"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               />
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical"
               android:layout_marginTop="10dp"
               >
               <de.hdodenhof.circleimageview.CircleImageView
                   xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:id="@+id/car_image"
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:layout_gravity="center"
                   android:src="@drawable/taxi"
                   app:civ_border_width="2dp"
                   app:civ_border_color="#FF000000"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="BMW"
                   android:id="@+id/tvCarName"
                   android:textAlignment="center"
                   android:layout_marginTop="10dp"
                   android:textColor="@color/Wheat"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/change_car"
                   android:textColor="@color/red"
                   android:textSize="15dp"
                   android:layout_marginTop="10dp"
                   android:textAlignment="center"
                   android:id="@+id/tvChangeCar"
                   />
           </LinearLayout>
       </LinearLayout>

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardElevation="2dp"
           android:layout_marginTop="16dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:id="@+id/helplayout"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="10dp"
                   >
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight=".4"
                       android:layout_height="30dp"
                       android:src="@drawable/helpicon"
                       android:tint="@color/tintblack"
                       />
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.4"
                       android:text="@string/help"
                       android:textColor="@color/black"
                       android:layout_gravity="center_vertical"
                       />
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight=".2"
                       android:layout_height="wrap_content"
                       android:tint="@color/gray"
                       android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:visibility="gone"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="10dp"
                   >
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight=".4"
                       android:layout_height="30dp"
                       android:tint="@color/tintblack"
                       android:src="@drawable/waybillicon"
                       />
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.4"
                       android:text="@string/waybill"
                       android:layout_gravity="center_vertical"
                       android:textColor="@color/black"
                       />
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight=".2"
                       android:layout_height="wrap_content"
                       android:tint="@color/gray"
                       android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="10dp"
                   android:id="@+id/docLayout"
                   >
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight=".4"
                       android:layout_height="30dp"
                       android:src="@drawable/docicon"
                       android:tint="@color/tintblack"
                       />
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.4"
                       android:text="@string/Document"
                       android:layout_gravity="center_vertical"
                       android:textColor="@color/black"
                       />
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight=".2"
                       android:layout_height="wrap_content"
                       android:tint="@color/gray"
                       android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                       />
               </LinearLayout>
               <!--<LinearLayout-->
                   <!--android:layout_width="match_parent"-->
                   <!--android:layout_height="wrap_content"-->
                   <!--android:orientation="horizontal"-->
                   <!--android:weightSum="2"-->
                   <!--android:layout_marginTop="5dp"-->
                   <!--android:layout_marginBottom="10dp"-->
                   <!--android:id="@+id/payLayout"-->
                   <!--&gt;-->
                   <!--<ImageView-->
                       <!--android:layout_width="0dp"-->
                       <!--android:layout_weight=".4"-->
                       <!--android:layout_height="30dp"-->
                       <!--android:tint="@color/tintblack"-->
                       <!--android:src="@drawable/paymenticon"-->
                       <!--/>-->
                   <!--<TextView-->
                       <!--android:layout_width="0dp"-->
                       <!--android:layout_height="wrap_content"-->
                       <!--android:layout_weight="1.4"-->
                       <!--android:text="@string/payment"-->
                       <!--android:layout_gravity="center_vertical"-->
                       <!--android:textColor="@color/black"-->
                       <!--/>-->
                   <!--<ImageView-->
                       <!--android:layout_width="0dp"-->
                       <!--android:layout_weight=".2"-->
                       <!--android:layout_height="wrap_content"-->
                       <!--android:tint="@color/gray"-->
                       <!--android:src="@drawable/ic_keyboard_arrow_right_white_24dp"-->
                       <!--/>-->
               <!--</LinearLayout>-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="10dp"
                   android:id="@+id/settingsLayout"
                   >
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight=".4"
                       android:layout_height="30dp"
                       android:src="@drawable/settingsicon"
                       android:tint="@color/tintblack"
                       />
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.4"
                       android:text="@string/action_settings"
                       android:layout_gravity="center_vertical"
                       android:textColor="@color/black"
                       />
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight=".2"
                       android:layout_height="wrap_content"
                       android:tint="@color/gray"
                       android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="10dp"
                   android:id="@+id/aboutlayout"
                   >
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight=".4"
                       android:layout_height="30dp"
                       android:tint="@color/tintblack"
                       android:src="@drawable/abouticon"
                       />
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1.4"
                       android:text="@string/about"
                       android:layout_gravity="center_vertical"
                       android:textColor="@color/black"
                       />
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight=".2"
                       android:layout_height="wrap_content"
                       android:tint="@color/gray"
                       android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                       />
               </LinearLayout>
           </LinearLayout>
       </android.support.v7.widget.CardView>


       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardElevation="2dp"
           android:layout_marginTop="16dp"
           android:layout_marginBottom="60dp"
           android:id="@+id/cardLogout"
           app:cardBackgroundColor="#e20d1f"
           >
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/Logout"
              android:padding="15dp"
              android:textStyle="bold"
              android:textSize="20sp"
              android:textColor="@color/Wheat"
              />
       </android.support.v7.widget.CardView>

   </LinearLayout>

</android.support.v4.widget.NestedScrollView>
